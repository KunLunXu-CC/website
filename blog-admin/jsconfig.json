{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",

    "paths": {
      "@assets/*": ["src/assets/*"],
      "@config/*": ["src/config/*"],
      "@server/*": ["src/server/*"],
      "@kook/*": ["src/hook/*"],
      "@components/*": ["src/components/*"]
    },
    "target": "ES6",
    "module": "es6",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
